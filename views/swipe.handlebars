<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">

    <!-- custom styles -->
    <link rel="stylesheet" href="/styles/jTinder.css" type="text/css" />
    <link type="text/css" rel="stylesheet" href="/styles/materialize.min.css" media="screen,projection" />
    <link rel="stylesheet" href="/styles/swipe.css" type="text/css" />
    <title>Swipe Your Paws!</title>
</head>

<body>
    <div class="row">
        <div class="col l3 m1"></div>
        <div class="col l6 m10 l12">
            <div id="tinderslide">
                <ul id="tinderList">
                    {{#each .}}
                    {{#if dataValues.dog_name}}
                    <li data-id={{dataValues.dog_id}} data-name={{dataValues.dog_name}} data-img={{dataValues.dog_img}}
                        data-url={{dataValues.dog_url}}>
                        <div class="img"
                            style="background-image: url({{dataValues.dog_img}}); background-size: cover; background-position: center">
                        </div>

                        <h5>{{dataValues.dog_name}}</h5>
                        <br>
                        <div class="like"></div>
                        <div class="dislike"></div>
                    </li>
                    {{/if}}
                    {{/each}}
                </ul>

            </div>
        </div>
        <div class="col l3 m1"></div>
    </div>


    <div class="row">
          <div class="col l3 m1"></div>
        <div class="col l6 m10 l12">
     <div class="actions">
            <span class="dislike">
                <a class="btn-floating btn-large waves-effect waves-light deep-purple lighten-1 white-text">Nope</a>
            </span>
            <span class="like">
                <a class="btn-floating btn-large waves-effect waves-light deep-purple pulse white-text">Love</a>
            </span>
        </div>
        </div>
         <div class="col l3 m1"></div>
        </div>


    <!-- Modal Trigger -->
    <a class="waves-effect waves-light btn modal-trigger red" href="#modal1">Modal TEST</a>

    <!-- Modal Structure -->
    <div id="modal1" class="modal modal-fixed-footer">
        <div class="modal-content">
            <h4>My Matches</h4>
            <div id="matches">
                < matches here >
            </div>
        </div>
        <div class="modal-footer deep-purple darken-3">
            <a href="#!" class="modal-close waves-effect waves-light btn-flat white-text">Swipe Again</a>
        </div>
    </div>


